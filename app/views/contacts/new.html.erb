<% provide(:title, "New Contact") %>
<h1>New Contact</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@contact) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :mobile %>
      <%= f.text_field :mobile %>

      <%= f.label :phone %>
      <%= f.text_field :phone %>

      <%= f.label :role %>
      <%= f.number_field :role %>

      <%= f.label :priority %>
      <%= f.number_field :priority %>

      <%= f.label :address %>
      <%= f.text_field :address %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.submit "Create new contact", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
